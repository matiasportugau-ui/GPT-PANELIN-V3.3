{
  "name": "panelin-mcp-server",
  "version": "0.3.0",
  "description": "MCP server for GPT-PANELIN v3.4 â€” BMC Assistant Pro. Provides pricing lookup, catalog search, BOM calculation, error reporting, Wolf API KB Write (conversations, corrections, customers), and background task processing for batch operations and full quotation generation.",
  "transport": ["stdio", "sse"],
  "tools": [
    "tools/price_check.json",
    "tools/catalog_search.json",
    "tools/bom_calculate.json",
    "tools/report_error.json",
    "tools/quotation_store.json",
    "tools/persist_conversation.json",
    "tools/register_correction.json",
    "tools/save_customer.json",
    "tools/lookup_customer.json",
    "tools/batch_bom_calculate.json",
    "tools/bulk_price_check.json",
    "tools/full_quotation.json",
    "tools/task_status.json",
    "tools/task_result.json",
    "tools/task_list.json",
    "tools/task_cancel.json"
  ],
  "feature_flags": {
    "ENABLE_QDRANT_MEMORY": false,
    "ENABLE_VECTOR_RETRIEVAL": false
  },
  "memory": {
    "file_store_path": "../quotation_memory.json",
    "qdrant": {
      "url": "http://localhost:6333",
      "api_key_env": "QDRANT_API_KEY",
      "collection": "panelin_quotations",
      "timeout_seconds": 2
    }
  },
  "kb_paths": {
    "pricing_master": "../bromyros_pricing_master.json",
    "pricing_optimized": "../bromyros_pricing_gpt_optimized.json",
    "accessories": "../accessories_catalog.json",
    "bom_rules": "../bom_rules.json",
    "shopify_catalog": "../shopify_catalog_v1.json",
    "shopify_index": "../shopify_catalog_index_v1.csv",
    "core_kb": "../BMC_Base_Conocimiento_GPT-2.json",
    "corrections_log": "../corrections_log.json"
  },
  "wolf_api": {
    "base_url_env": "WOLF_API_URL",
    "api_key_env": "WOLF_API_KEY",
    "default_base_url": "https://panelin-api-642127786762.us-central1.run.app",
    "kb_write_password_env": "WOLF_KB_WRITE_PASSWORD",
    "timeout_seconds": 10
  },
  "openai_integration": {
    "registration_method": "custom_gpt_actions",
    "alternative": "responses_api_mcp_tool",
    "docs": "https://platform.openai.com/docs/mcp"
  },
  "github_mcp": {
    "server": "github/github-mcp-server",
    "auth": "oauth",
    "capabilities": ["repo_read", "issues", "pull_requests", "actions"]
  }
}
