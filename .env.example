# ==============================================================================
# GPT-PANELIN-V3.2 Environment Configuration
# ==============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env file to version control!

# ------------------------------------------------------------------------------
# OpenAI Configuration
# ------------------------------------------------------------------------------
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7

# ------------------------------------------------------------------------------
# MCP Server Configuration
# ------------------------------------------------------------------------------
MCP_SERVER_HOST=0.0.0.0
MCP_SERVER_PORT=8000
MCP_SERVER_LOG_LEVEL=INFO
MCP_SERVER_TRANSPORT=stdio
# Options: stdio, sse

# ------------------------------------------------------------------------------
# Application Settings
# ------------------------------------------------------------------------------
APP_NAME=GPT-PANELIN-V3.2
APP_VERSION=3.2.0
ENVIRONMENT=production
# Options: development, staging, production

DEBUG=false
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# ------------------------------------------------------------------------------
# Database/Storage Configuration (if applicable)
# ------------------------------------------------------------------------------
DATABASE_URL=
REDIS_URL=
# Example: redis://localhost:6379/0

# ------------------------------------------------------------------------------
# Knowledge Base Paths
# ------------------------------------------------------------------------------
KB_PRICING_MASTER=bromyros_pricing_master.json
KB_PRICING_OPTIMIZED=bromyros_pricing_gpt_optimized.json
KB_ACCESSORIES=accessories_catalog.json
KB_BOM_RULES=bom_rules.json
KB_SHOPIFY_CATALOG=shopify_catalog_v1.json
KB_CORE=BMC_Base_Conocimiento_GPT-2.json
KB_CORRECTIONS_LOG=corrections_log.json

# ------------------------------------------------------------------------------
# Monitoring & Observability
# ------------------------------------------------------------------------------
SENTRY_DSN=
# Example: https://abc123@o123456.ingest.sentry.io/123456

ENABLE_METRICS=true
METRICS_PORT=9090

# ------------------------------------------------------------------------------
# Security Settings
# ------------------------------------------------------------------------------
API_KEY_REQUIRED=true
API_KEY=
CORS_ENABLED=false
CORS_ORIGINS=*
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# ------------------------------------------------------------------------------
# Background Tasks Configuration
# ------------------------------------------------------------------------------
ENABLE_BACKGROUND_TASKS=true
MAX_WORKERS=4
TASK_TIMEOUT_SECONDS=300

# ------------------------------------------------------------------------------
# PDF Generation Settings
# ------------------------------------------------------------------------------
PDF_OUTPUT_DIR=panelin_reports/output
PDF_LOGO_PATH=bmc_logo.png
PDF_TEMPLATE_VERSION=2.0

# ------------------------------------------------------------------------------
# IVA (Tax) Configuration
# ------------------------------------------------------------------------------
IVA_RATE=0.22
# 22% IVA for Uruguay

# ------------------------------------------------------------------------------
# Feature Flags
# ------------------------------------------------------------------------------
ENABLE_BATCH_OPERATIONS=true
ENABLE_FULL_QUOTATION=true
ENABLE_ERROR_REPORTING=true
ENABLE_QUOTATION_STORE=true

# ------------------------------------------------------------------------------
# Cache Configuration
# ------------------------------------------------------------------------------
ENABLE_CACHE=true
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE=1000

# ------------------------------------------------------------------------------
# External Services (Optional)
# ------------------------------------------------------------------------------
SHOPIFY_API_KEY=
SHOPIFY_API_SECRET=
SHOPIFY_STORE_URL=

# ------------------------------------------------------------------------------
# Wolf API Configuration (v3.4 KB Write Integration)
# ------------------------------------------------------------------------------
# Wolf API enables GPT to modify the Knowledge Base through authenticated write operations
# Required for: persist_conversation, register_correction, save_customer tools
# See: WOLF_KB_WRITE_ACCESS_VERIFICATION.md for details

# Wolf API Base URL (default: production endpoint)
WOLF_API_URL=https://panelin-api-642127786762.us-central1.run.app

# Wolf API Authentication Key (X-API-Key header)
# REQUIRED: Obtain from system administrator
WOLF_API_KEY=

# KB Write Password (for write operations authorization)
# IMPORTANT: Change from default "mywolfy" in production!
# Used by: persist_conversation, register_correction, save_customer
WOLF_KB_WRITE_PASSWORD=

# ------------------------------------------------------------------------------
# Deployment Configuration
# ------------------------------------------------------------------------------
DEPLOYMENT_ENVIRONMENT=production
HEALTH_CHECK_ENDPOINT=/health
METRICS_ENDPOINT=/metrics
