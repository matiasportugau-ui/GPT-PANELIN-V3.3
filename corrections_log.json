    "id": "COR-NNN format",
    "date": "ISO 8601 date",
    "kb_file": "Name of the affected KB file",
    "field": "JSON path or section reference to the incorrect data",
    "wrong_value": "The incorrect value that was found",
    "correct_value": "The corrected value",
    "source": "How the error was discovered (user correction, validation, audit)",
    "status": "pending | applied | rejected",
    "applied_date": "Date the correction was applied to the KB file (null if pending)"
  },
